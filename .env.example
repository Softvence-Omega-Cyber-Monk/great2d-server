# Database Configuration
# For Docker: postgresql://postgres:postgres@localhost:5432/great2d
# For production: Update with your actual database credentials
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/great2d"

# Application Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRATION=7d

# Email Configuration (if using nodemailer)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@example.com

# PayPal Configuration (if applicable)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

